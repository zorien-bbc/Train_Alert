<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:src="@drawable/connection_transp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/vonLabel" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/vonLabel"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nachLabel"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/vonGleisLabel"
        android:textColor="#000" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/nachLabel"
        android:layout_alignBottom="@+id/bisGleisLabel"
        android:layout_toStartOf="@+id/bisGleisLabel"
        android:textColor="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/vonZeitLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/bisZeitLabel"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/vonGleisLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#000"
        android:gravity="right" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/bisGleisLabel"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:textColor="#000"
        android:gravity="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/bahnLabel"
        android:layout_alignStart="@+id/nachLabel"
        android:layout_below="@+id/vonLabel"
        android:layout_above="@+id/nachLabel"
        android:layout_alignEnd="@+id/vonGleisLabel"
        android:gravity="left|center_vertical"
        android:textStyle="italic" />

</RelativeLayout>